<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="Select Image"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/text_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_camera1"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:text="Camera"
            android:drawableStart="@drawable/ic_photo_camera"
            android:drawablePadding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_photo_camera" />
        <View
            android:layout_width="match_parent"
            android:background="#D4D4D4"
            android:layout_height="1dp"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_gallery1"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Gallery"
            android:drawableStart="@drawable/ic_gallery"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_gallery" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_10">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_takephoto"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="3sp"
                    android:layout_marginRight="3sp"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/cameranew" />

                <TextView
                    android:id="@+id/tv_camera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Take Photo"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_marginEnd="@dimen/margin_10"/>
            </LinearLayout>



            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_galleryphoto"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="3sp"
                    android:layout_marginRight="3sp"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/gallerynew" />


                <TextView
                    android:id="@+id/tv_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Upload Photo"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_marginEnd="@dimen/margin_10"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

      <ImageView
          android:visibility="gone"
          android:id="@+id/iv_close"
          android:layout_marginTop="10dp"
          android:layout_gravity="end"
          android:layout_marginEnd="10dp"
          app:srcCompat="@drawable/ic_vector_close"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginRight="10dp" />






</LinearLayout>